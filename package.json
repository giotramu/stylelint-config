{
  "name": "@giotramu/stylelint-config",
  "version": "2.2.3",
  "description": "Shareable stylelint config with great defaults.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/stylelint-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/stylelint-config/issues"
  },
  "engines": {
    "node": ">=10.18",
    "npm": ">=6.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "check:src": "tsc --noEmit",
    "lint:src": "eslint . --ext .ts,.js",
    "lint": "npm run check:src && npm run lint:src",
    "test:css": "stylelint ./test/*.css --config ./test/_config.css.js",
    "test:scss": "stylelint ./test/*.scss --config ./test/_config.scss.js",
    "test:hybrid": "stylelint ./test/*.{ts,js} --config ./test/_config.hybrid.js",
    "pretest": "npm run build",
    "test": "run-p test:**",
    "prebuild": "rimraf ./dist",
    "build": "tsc --declaration"
  },
  "peerDependencies": {
    "stylelint": "^13.2.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.16.0"
  },
  "dependencies": {
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^13.9.8",
    "@types/stylelint": "^9.10.1",
    "eslint": "^6.8.0",
    "eslint-config-contactlab": "^4.2.2",
    "eslint-config-prettier": "^6.10.1",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.2.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.16.0",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "check",
    "checker",
    "code-style",
    "css",
    "scss",
    "lint",
    "linter",
    "stylelint-config",
    "stylelint"
  ]
}
