{
  "name": "@giotramu/stylelint-config",
  "version": "2.1.1",
  "description": "Shareable stylelint config with great defaults.",
  "author": "Giovanni Tramutola <gtramutola@mail.com>",
  "homepage": "https://github.com/giotramu/stylelint-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/giotramu/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/stylelint-config/issues"
  },
  "engines": {
    "node": ">=10.18",
    "npm": ">=6.13"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "files": [
    "dist",
    "*.md",
    "LICENSE"
  ],
  "scripts": {
    "check:src": "tsc --noEmit",
    "lint:src": "eslint . --ext .ts,.js",
    "test:css": "stylelint ./test/*.css --config ./test/_config.css.js",
    "test:scss": "stylelint ./test/*.scss --config ./test/_config.scss.js",
    "test:hybrid": "stylelint ./test/*.{ts,js} --config ./test/_config.hybrid.js",
    "pretest": "npm run build",
    "test": "npm run test:css && npm run test:scss && npm run test:hybrid",
    "prebuild": "rm -rf ./dist",
    "build": "tsc --declaration",
    "prepublishOnly": "npm test && npm run build"
  },
  "peerDependencies": {
    "stylelint": "^13.0.0",
    "stylelint-processor-styled-components": "^1.9.0",
    "stylelint-scss": "^3.13.0"
  },
  "dependencies": {
    "stylelint-declaration-block-no-ignored-properties": "^2.2.0",
    "stylelint-order": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^13.1.8",
    "@types/stylelint": "^9.10.1",
    "eslint": "^6.8.0",
    "eslint-config-contactlab": "^4.2.0",
    "eslint-config-prettier": "^6.9.0",
    "husky": "^4.2.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "stylelint": "^13.0.0",
    "stylelint-processor-styled-components": "^1.9.0",
    "stylelint-scss": "^3.13.0",
    "typescript": "^3.7.5"
  },
  "keywords": [
    "check",
    "checker",
    "code style",
    "css",
    "scss",
    "lint",
    "linter",
    "stylelint-config",
    "stylelint"
  ]
}
