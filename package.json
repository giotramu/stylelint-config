{
  "name": "@giotramu/stylelint-config",
  "version": "3.0.2",
  "description": "Shareable Stylelint config with great defaults. It supports PostCSS syntax, SASS language, and CSS in JS solutions.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/stylelint-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/stylelint-config/issues"
  },
  "engines": {
    "node": ">=10.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "common/*.d.ts",
    "common/*.js",
    "hybrid.d.ts",
    "hybrid.js",
    "index.d.ts",
    "index.js",
    "scss.d.ts",
    "scss.js"
  ],
  "scripts": {
    "check:src": "tsc --noEmit",
    "lint:src": "eslint . --ext .js,.ts",
    "lint": "npm run lint:src",
    "test:css": "stylelint ./test/*.css --config ./test/_config.css.js",
    "test:scss": "stylelint ./test/*.scss --config ./test/_config.scss.js",
    "test:hybrid": "stylelint ./test/*.{ts,js} --config ./test/_config.hybrid.js",
    "pretest": "npm run build",
    "test": "npm run test:css && npm run test:scss && npm run test:hybrid",
    "clean": "rimraf ./index.js ./hybrid.js ./scss.js ./common/*.js *.d.ts",
    "prebuild": "npm run clean",
    "build": "tsc"
  },
  "peerDependencies": {
    "stylelint": "^13.2.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.16.0"
  },
  "dependencies": {
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^13.13.4",
    "@types/stylelint": "^9.10.1",
    "eslint": "^6.8.0",
    "eslint-config-contactlab": "^4.2.2",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.3",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "rimraf": "^3.0.2",
    "stylelint": "^13.3.3",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.17.1",
    "typescript": "^3.8.3"
  },
  "keywords": [
    "check",
    "checker",
    "code-style",
    "css",
    "scss",
    "lint",
    "linter",
    "stylelint-config",
    "stylelint"
  ]
}
