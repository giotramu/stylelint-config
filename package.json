{
  "name": "@giotramu/stylelint-config",
  "version": "5.1.0",
  "description": "Shareable Stylelint config with great defaults. It supports PostCSS syntax, SASS language, and CSS in JS solutions.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/stylelint-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/stylelint-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/stylelint-config/issues"
  },
  "engines": {
    "node": ">=14.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "typings/index.d.ts",
  "files": [
    "{index,hybrid,scss}.js",
    "common/",
    "typings/"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint:src": "eslint . --ext .js,.ts",
    "lint": "npm run lint:src",
    "test:css": "stylelint ./test/*.css --config ./test/_config.css.js",
    "test:scss": "stylelint ./test/*.scss --config ./test/_config.scss.js",
    "test:hybrid": "stylelint ./test/*.{ts,js} --config ./test/_config.hybrid.js",
    "pretest": "npm run build",
    "test": "npm run test:css && npm run test:scss && npm run test:hybrid",
    "clean": "rimraf ./{index,hybrid,scss}.js ./common ./typings",
    "build": "npm run clean && tsc"
  },
  "peerDependencies": {
    "stylelint": "^13.7.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.18.0"
  },
  "dependencies": {
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-order": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/stylelint": "^9.10.1",
    "eslint": "^7.12.1",
    "eslint-config-contactlab": "^5.0.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "stylelint": "^13.7.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.0.5"
  },
  "keywords": [
    "check",
    "checker",
    "code-style",
    "css",
    "scss",
    "lint",
    "linter",
    "stylelint-config",
    "stylelint"
  ]
}
